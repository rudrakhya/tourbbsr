<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.cetb.rudrakhya.tourbbsr" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TourismActivity"
            android:label="@string/title_activity_tourism"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.cetb.rudrakhya.tourbbsr.MainActivity" />
        </activity>
        <activity
            android:name=".TourismPlaceActivity"
            android:label="@string/title_activity_tourism_place"
            android:parentActivityName=".TourismActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.cetb.rudrakhya.tourbbsr.TourismActivity" />
        </activity>
        <activity
            android:name=".SpecialAlertsActivity"
            android:label="@string/title_activity_special_alerts"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.cetb.rudrakhya.tourbbsr.MainActivity" />
        </activity>
        <activity
            android:name=".SpecialAlertEventActivity"
            android:label="@string/title_activity_special_alert_event"
            android:parentActivityName=".SpecialAlertsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.cetb.rudrakhya.tourbbsr.SpecialAlertsActivity" />
        </activity>
    </application>

</manifest>
